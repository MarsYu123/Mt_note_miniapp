<!--pages/vip/vip.wxml-->
<view class="vip">
    <view class="kv">
        <image class="tx" src="" mode="widthFix" />
        <view class="user_info">
            <view class="name">
                一颗柠檬
            </view>
            <view class="info">
                到期时间：2020-12-22
            </view>
        </view>
    </view>

    <view class="store_nav">
        <view class="nav_item {{class == index?'active':''}}" wx:for="{{nav}}" data-id="{{index}}" bindtap="nav">
            {{item}}
        </view>
    </view>

    <block wx:if="{{class == 0}}">
        <view class="money_check">
            <view class="money_item {{check_id == 0?'active':''}}" bindtap="check" data-id="0">
                <view class="h3">
                    1个月
                </view>
                <view class="h1">
                    <text style="font-size: 36rpx;">￥</text>
                    <text>20</text>
                </view>
                <view class="h4" style="text-decoration:line-through">
                    原价 30元/月
                </view>
            </view>
            <view class="money_item {{check_id == 1?'active':''}}" bindtap="check" data-id="1">
                <view class="h3">
                    12个月
                </view>
                <view class="h1">
                    <text style="font-size: 36rpx;">￥</text>
                    <text>200</text>
                </view>
                <view class="h4" style="text-decoration:line-through">
                    原价 30元/月
                </view>
            </view>
            <view class="end_time">
                优惠价截止 2019-3-31
            </view>
        </view>

        <!-- 卡券 -->
        <view class="ticket_check">
            <view class="title">卡券</view>
            <view class="right">
                <view class="num">2张可用</view>
            </view>
        </view>

        <!-- 会员特权 -->
        <image class="vip_msg" src="https://www.mati.hk/Public/MiniProgram-note/user/vip_msg.jpg" mode="widthFix" />

    </block>

    <block wx:if="{{class == 1}}">
        <view class="order_list">
            <view class="order_item">
                <view class="title">
                    <text class="order_no">订单编号：sdsaeq123123123</text>
                    <text class="order_state">交易成功</text>
                </view>
                <view class="order_info">
                    <view class="info_item">
                        VIP类型：月付会员
                    </view>
                     <view class="info_item">
                        交易时间：2018.4.3 13:32:15
                    </view>
                     <view class="info_item">
                        数量：1
                    </view>
                     <view class="info_item">
                        实付款：¥99
                    </view>
                </view>
            </view>
        </view>
    </block>
</view>