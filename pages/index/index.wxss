/**index.wxss**/
.index {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.nav {
  width: 100%;
  height: 40rpx;
  display: flex;
}

.nav_item {
  padding: 0 30rpx;
  line-height: 40rpx;
  flex-grow: 1;
  text-align: center;
  border-right: 1px #eee solid;
  box-sizing: border-box
}

.nav_item.active {
  background: red
}

.nav_item:last-child {
  border: none
}

.download_history,
.photo {
  width: 100%;
  height: calc(100% - 40rpx);
}

.down_box {
  width: 100%;
  height: 100%;
  background: #eee
}

.photo{
  background: #eee;
  width: 100%;
  height: 100%;
}
.photo_box{
  height: 100%;
}
.photo_cont{
  display: flex;
  justify-content: space-around;
  flex-direction: row
}
.photo_cont .left,.photo_cont .right{
  width: 50%;
  padding: 10rpx 5rpx;
  box-sizing: border-box
}
.photo_cont image{
  width: 100%;
  background: #ffffff
}


.user{
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  right: 0;
  bottom: 100rpx;
  background: #ffffff
}