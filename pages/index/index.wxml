<!--index.wxml-->
<view class="index">

  <image src='https://www.mati.hk/Public/MiniProgram-note/user/store_kv.png' mode="widthFix" class="kv" />

  <view class="nav">
    <view class="nav_item {{nav_index == index? 'active':''}}" bindtap='nav_click' wx:for="{{nav}}" data-id="{{index}}">{{item}}</view>
  </view>

  <block wx:if="{{nav_index == 0}}">
    <view class="download_history">
      <scroll-view class="down_box" scroll-y="true" lower-threshold="80" bindscrolltolower="load_download"
        enable-back-to-top="true">

        <view class="history_item active">
          <view class="title">
            <text class="title_cont">室内设计!e21321dasd as wq</text>
            <text class="title_state">已下载</text>
          </view>
          <view class="img_box">
            <image src="https://img.mati.hk/Public//Upload/Album/ykArticle/20181106/mati.hk-20181106-57013456.jpg" mode="aspectFill" />
            <image src="https://img.mati.hk/Public//Upload/Album/ykArticle/20181106/mati.hk-20181106-57013456.jpg" mode="aspectFill" />
            <image src="https://img.mati.hk/Public//Upload/Album/ykArticle/20181106/mati.hk-20181106-57013456.jpg" mode="aspectFill" />
          </view>
          <view class="bottom">
            <view class="info">
              <text>@环球设计</text>
              <text>2018/10/11</text>
            </view>
            <view class="like_box">
              <text class="like">123</text>
              <text class="msg">123</text>
            </view>
          </view>
        </view>

      </scroll-view>
    </view>
  </block>

  <block wx:else>
    <view class="photo">
      <view class="history_img" style="display:none">
        <image wx:for="{{new_img}}" src="{{img_host}}{{item.img_url}}" mode="widthFix" bindload="img_load" data-index="{{item.index}}" />
      </view>
      <scroll-view class="photo_box" scroll-y="true" lower-threshold="80" bindscrolltolower="load_photo"
        enable-back-to-top="true">
        <view class="photo_cont">
          <view class="left">
            <view wx:for="{{img.left}}" class="img {{item.check?'active':''}}" bindtap="check_img" data-index="{{index}}" data-id="{{item.picture_id}}" data-direction='left' data-url="{{item.img_url}}" data-labelid="{{item.label_id}}">
              <image  src="{{img_host}}{{item.img_url}}" mode="widthFix"
                lazy-load="{{true}}" />
            </view>
          </view>
          <view class="right">
            <view class="img {{item.check?'active':''}}" bindtap="check_img" wx:for="{{img.right}}"  data-index="{{index}}" data-id="{{item.picture_id}}" data-direction='right'  data-url="{{item.img_url}}" data-labelid="{{item.label_id}}">
              <image  src="{{img_host}}{{item.img_url}}" mode="widthFix"
                lazy-load="{{true}}" />
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
    <block wx:if="{{!is_check}}">
      <view class="photo_bottom">
        <view class="screen" bindtap="screen">
          筛选标签
        </view>
        <view class="download_check" bindtap="download_check">
          选择下载
        </view>
      </view>
    </block>
    <block wx:else>
      <view class="photo_bottom">
        <view class="screen" bindtap="esc_check">
          取消
        </view>
        <view class="download_check" style="background:#39CCE1;color:#ffffff" bindtap="download_check">
          下载
        </view>
      </view>
    </block>
  </block>

  <view class="label_box" animation="{{animate}}">

    <view class="box_cont">
      <view class="cont_item">
        <view class="item_left">
          <image src="https://www.mati.hk/Public/MiniProgram-note/index/kjcj.png" />
          <view>空间场景</view>
        </view>
        <view class="item_right">
          <view class="label">住宅</view>
          <view class="label">住宅宅</view>
          <view class="label">住宅</view>
          <view class="label">住宅宅</view>
          <view class="label">住宅</view>
          <view class="label">住宅</view>
          <view class="label">住宅</view>
          <view class="label">住宅宅</view>
          <view class="label">住宅宅</view>
          <view class="label">住宅</view>
          <view class="label">住宅</view>
          <view class="label">住宅</view>
          <view class="label">住宅</view>
        </view>
      </view>
    </view>
    <view class="box_btn">
      <view class="clear" bindtap="clear_label">
        取消
      </view>
      <view class="enter">
        确定
      </view>
    </view>

  </view>

  <view class="user">
    <view class="sign_in">
      <image src='https://www.mati.hk/Public/MiniProgram-note/index/sign_in.png' mode="widthFix" bindtap="sign_in" />

      <button class="login" wx:if="{{!is_getuser}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" id="user">
        登陆/注册
      </button>
    </view>
    <view class="tx">
      <image src='https://www.mati.hk/Public/MiniProgram-note/user/wx_tx.png' mode="widthFix" bindtap="nav_user" />

      <button class="login" wx:if="{{!is_getuser}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" id="user">
        登陆/注册
      </button>
    </view>
    <view class="new_download">
      <image src='https://www.mati.hk/Public/MiniProgram-note/index/more.png' mode="widthFix" bindtap="new_donload" />

      <button class="login" wx:if="{{!is_getuser}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" id="user">
        登陆/注册
      </button>
    </view>
  </view>
</view>