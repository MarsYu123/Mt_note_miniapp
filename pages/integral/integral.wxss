/* pages/integral/integral.wxss */
.integral {
    position: relative;
    width: 100%;
    height: 100%;
    padding-right: 10rpx;
    overflow: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    background: #f7f7fa;
}

.integral_kv {
    width: 646rpx;
    height: 336rpx;
    margin: 20rpx 52rpx;
    position: relative;
}

.integral_kv .bg {
    width: 100%;
    height: 100%;
}

.kv_title {
    position: absolute;
    left: 60rpx;
    top: 60rpx;
    display: flex;
    align-items: flex-start
}

.kv_title .tx {
    width: 100rpx;
    height: 100rpx;
    border: 2px solid #ffffff;
    margin-right: 20rpx;
    border-radius: 50%;
    /* box-sizing: border-box */
}

.kv_title .name {
    font-size: 28rpx;
    color: #FFFFFF;
}

.kv_num {
    position: absolute;
    left: 60rpx;
    top: 200rpx;
    color: #ffffff;
    font-size: 50rpx;
    text-align: center
}

.kv_num .h5 {
    font-size: 20rpx;
}

.nav {
    width: 100%;
    height: 96rpx;
    background: #ffffff;
    display: flex;
    justify-content: space-around;
    box-shadow: 0 2px 4px 0 #D9DFED;
    margin-bottom: 30rpx
}

.nav_item {
    width: 200rpx;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    position: relative;
    font-size: 16px;
    color: #A7B0C2;
}

.nav_item.active {
    color: #39CCE1;
}

.nav_item.active::after {
    background: #39CCE1;
    content: '';
    display: block;
    width: 100%;
    height: 6rpx;
    border-radius: 5rpx;
    bottom: 0;
    left: 0;
    position: absolute
}

.task_title {
    width: 690rpx;
    height: 58rpx;
    line-height: 58rpx;
    text-align: center;
    box-shadow: 0 2px 7px 0 #D9DFED;
    font-size: 14px;
    color: #39CCE1;
    margin: auto;
    margin-bottom: 20rpx;
    background: #ffffff;
    border-radius: 5px;
    position: relative;
}

.task_title.more::after {
    content: '';
    display: block;
    width: 0;
    height: 0;
    border-color: #39CCE1 transparent transparent transparent;
    border-style: solid;
    border-width: 18rpx;
    position: absolute;
    right: 22rpx;
    top: 22rpx;
    transition: all .5s;
    transform-origin: 50% 25%
}

.task_title.more.active::after {
    transform: rotate(-90deg)
}

.day_task {
    margin-bottom: 30rpx;
    width: 690rpx;
    margin: auto;
}

.day_task.more {
    max-height: 0;
    transition: all 0.5s;
    overflow: hidden;
}

.day_task.more.active {
    max-height: 600rpx;
}

.task_item {
    width: 100%;
    height: 138rpx;
    background: #FFFFFF;
    color: #495E8B;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
    padding: 0 50rpx;
    box-sizing: border-box;
    box-shadow: 0 2px 7px 0 #D9DFED;
    border-radius: 5px
}

.task_left .title {
    font-size: 36rpx;
}

.task_left .msg {
    font-size: 24rpx;
    white-space:nowrap;
}

.task_right {
    font-size: 28rpx;
    color: #3489FF;
}
.task_right.ri{
    text-align: right
}
.task_right .num {
    font-size: 28rpx;
    color: #3489FF;
}

.task_right .time {
    font-size: 24rpx;
    color: #495E8B;
    white-space:nowrap;
}

.task_right.active {
    color: #C8DFFF;
}

.store {
    width: 690rpx;
    height: 102rpx;
    line-height: 102rpx;
    background: #39CCE1;
    box-shadow: 0 2px 7px 0 #A7B0C2;
    text-align: center;
    font-size: 36rpx;
    color: #FFFFFF;
    margin: auto;
    margin-bottom: 60rpx;
    border-radius: 5px;
    position: relative;
}

.store::after {
    content: '';
    display: block;
    width: 0;
    height: 0;
    border-color: transparent transparent transparent #ffffff;
    border-style: solid;
    border-width: 18rpx;
    position: absolute;
    right: 10rpx;
    top: 35rpx;
    transition: all .5s;
    transform-origin: 50% 25%;
}