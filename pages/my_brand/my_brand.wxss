/* pages/my_brand/my_brand.wxss */
.my_brand {
    width: 100%;
    height: 100%;
    overflow-y: auto;
    padding-right: 10rpx;
    -webkit-overflow-scrolling: touch;
    background: #f7f7fa;
}

.brand_list {
    width: 100%;
    padding: 20rpx 30rpx;
    box-sizing: border-box
}

.brand_item {
    display: flex;
    justify-content: space-between;
    padding: 16rpx 30rpx;
    box-sizing: border-box;
    align-items: center;
    background: #ffffff;
}

.brand_item image {
    display: block;
    width: 160rpx;
    height: 160rpx;
}

.info {
    height: 160rpx;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    color: #A7B0C2;
    font-size: 24rpx;
}

.info .title {
    font-size: 28rpx;
    color: #495E8B;
    font-weight: bold;
}

.info .site {
    display: flex;
}

.info .site::before {
    content: '';
    display: inline-block;
    width: 25rpx;
    height: 25rpx;
    background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/site.png');
    background-size: 100% 100%;
    vertical-align: sub;
    margin-right: 5rpx;
}

.info .bottom {
    display: flex;
}

.info .call {
    margin-right: 24rpx;
}

.info .call::before {
    content: '';
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/call.png');
    background-size: 100% 100%;
    vertical-align: middle;
    margin-right: 10rpx;
}

.info .dist text {
    color: #39CCE1;
    margin: 0 10rpx;
}

.info .dist::before {
    content: '';
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/call.png');
    background-size: 100% 100%;
    vertical-align: middle;
    margin-right: 10rpx;
}