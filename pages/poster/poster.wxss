/* pages/poster/poster.wxss */
.poster{
    width: 100%;
    height: 100%;
    overflow: hidden;
    padding-right: 10px;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.poster_box{
    margin: 20rpx auto
}
.poster_canvas {
    width: 710rpx;
    height: 1078rpx;
    margin: auto;
    margin-top: 20rpx;
    border-radius: 8px;
    position: absolute;
    left: 1000px;
    /* background: #39CCE1 */
}

.img {
    margin: auto;
    width: 710rpx;
    height: 1078rpx;
    margin-top: 10rpx;
    border-radius: 8px;
    display: block
}

.save {
    margin: auto;
    background: #39CCE1;
    box-shadow: 0 2px 4px 0 #A7B0C2;
    width: 298rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ffffff;
    border-radius: 3px
}