/* pages/all_img/all_img.wxss */
.all_img {
  width: 100%;
  height: 100%;
  padding-right: 10px;
  overflow: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  background: #f7f7fa
}

.box {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  margin: 0 20rpx;
  box-shadow: 0 0 10px 0 #D9DFED;
  background: #ffffff;
}

.box>view {
  width: 100%

}

.img {
  width: 100%;
  position: relative;
  display: block;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.open_img {
  width: 750rpx;
  height: 1206rpx;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
}

.open_img image {
  width: 90%;
  position: absolute;
  display: block;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.open_img .open_img_clear {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 12px;
  color: #495E8B;
  text-align: center;
  margin: 20rpx auto
}

.is_label {
  width: 100%;
  background: rgba(211, 223, 247, 0.30);
  color: #495E8B;
  padding: 22rpx 24rpx;
  text-align: left;
  box-sizing: border-box;
}

.is_label .title {
  display: block;
  position: relative;
  width: 100%;
  margin: 0;
  text-align: left;
  display: flex;
  align-items: center;
  justify-content: space-between
}

.is_label .title::after {
  display: block;
  /* position: absolute; */
  content: '';
  width: 34rpx;
  height: 26rpx;
  background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/arrow.png');
  background-size: 100% 100%
}

.label {
  margin-top: 30rpx;
  font-size: 24rpx;
}

.no_label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  color: #495E8B;
}

.no_label .discern {
  width: 120rpx;
  height: 60rpx;
  background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/discern.png');
  background-size: 100% 100%;
}

