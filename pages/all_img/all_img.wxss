/* pages/all_img/all_img.wxss */
.all_img{
    width: 100%;
    height: 100%;
    padding-right: 10px;
    overflow: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    background: #f7f7fa
}
.box{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    margin: 10rpx auto;
    padding: 20rpx;
    box-sizing: border-box;
    width: 710rpx;
    box-shadow:0 0 10px 0 #D9DFED
}
.img{
    width:100%;
    position: relative;
    margin-bottom: 10rpx;
    margin-right: 10rpx;
    display: block;
}

.open_img {
    width: 750rpx;
    height: 1206rpx;
    overflow: hidden;
    position: absolute;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.5);
  }
  
  .open_img image {
    width: 90%;
    position: absolute;
    display: block;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }
  
  .open_img .open_img_clear {
    width: 100%;
    height: 100%;
  }
  .title{
    font-size: 12px;
    color: #495E8B;
    text-align: center;
    margin: 20rpx auto
  }