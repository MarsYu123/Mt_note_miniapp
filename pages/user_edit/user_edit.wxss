page {
    width: 100%;
    height: 100%;
    background: #ffffff;
}

.user_clear {
    clear: both;
    display: block;
    content: '';
    visibility: hidden;
    height: 0;
}

.user_msg {
    padding: 0 33rpx;
    margin-top: 20rpx;
    background: #fff
}

.text_title {
    font-size: 28rpx;
    color: #495E8B;
    justify-content: flex-start;
    display: flex;
    flex-grow: 1
}

.head_img,
.text_input,
.text_arrow {
    /* float: right; */
    display: block
}

.user::after,
.user_head::after {
    clear: both;
    display: block;
    content: '';
    visibility: hidden;
    height: 0;
}

.user_head {
    height: 160rpx;
    width: 100%;
    padding: 17rpx 0;
    box-sizing: border-box;
    border-bottom: #D8E7ED 1px solid;
    display: flex;
    justify-content: flex-end
}

.user_head .text_title {
    height: 125rpx;
    line-height: 125rpx;
}

.text_arrow {
    width: 20rpx;
    height: 20rpx;
    border-bottom: 4rpx solid #aeadad;
    border-right: 4rpx solid #aeadad;
    margin: 35rpx 0;
    transform: rotate(-45deg);
    border-radius: 4rpx
}

.user_head .text_arrow {
    margin: 60rpx 0;
}

.head_img {
    width: 130rpx;
    height: 130rpx;
    display: inline-block;
    vertical-align: middle;
    margin-right: 20rpx;
    border-radius: 50%;
    border: 4rpx #fff solid;
    /* box-shadow: 0 0 20rpx -5rpx #bbbbbb; */
    box-sizing: border-box
}

.text_title {
    height: 50rpx;
    line-height: 50rpx;
}

.user {
    border-bottom: #D8E7ED 1px solid;
    height: 90rpx;
    display: flex;
    align-items: center
}

.text_input input,
picker,
.input_pla {
    height: 90rpx;
    width: 400rpx;
    line-height: 90rpx;
    text-align: right;
    margin-right: 35rpx;
    font-size: 28rpx;
    color:  #A7B0C2
}

.user_textarea .text_title {
    display: block;
    margin-top: 30rpx;
    margin-bottom: 15rpx
}

.user_textarea .text_input {
    width: 100%;
}

textarea {
    width: 100%;
    height: 160rpx;
    border-radius: 3px;
    border: 1px solid #D8E7ED;
    font-size: 28rpx;
    color:  #A7B0C2;
    padding: 10rpx
}

picker view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap
}

.button {
    font-size: 36rpx;
    line-height: 100rpx;
    height: 100rpx;
    width: 100%;
    background: #39CCE1;
    color: #ffffff;
    display: block;
    text-align: center;
    position: fixed;
    bottom: 0;
    left: 0;
    box-shadow: 0 -1px 1px 0 rgba(0,0,0,0.07);
}
