/* pages/goods/goods.wxss */
.goods {
    width: 100%;
    height: 100%;
    overflow-y: auto;
    padding-right: 10rpx;
    -webkit-overflow-scrolling: touch;
    background: #f7f7fa;
}

.goods>view {
    margin: 0 30rpx;
}

.content {
    margin: 20rpx auto;
    background: #FFFFFF;
    box-shadow: 0 0 7px 0 #D9DFED;
}

.content .title {
    font-size: 48rpx;
    height: 88rpx;
    line-height: 88rpx;
    color: #495E8B;
    text-align: center;
}

.content image {
    width: 100%;
    margin-bottom: 20rpx;
}

.content .moer {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #4897AF;
    text-align: center;
    font-size: 28rpx;
    box-shadow: 0 0 4px 0 #D9DFED;
}

.goods_msg {
    width: 100%;
    margin-bottom: 20rpx;
    padding-top: 30rpx;
    background: #FFFFFF;
    box-shadow: 0 2px 7px 0 #D9DFED;
    box-sizing: border-box
}

.goods_msg .title {
    width: 100%;
    font-size: 28rpx;
    color: #495E8B;
    position: relative;
    text-align: center;
}

.goods_msg .title text {
    padding: 0 8rpx;
    position: relative;
    z-index: 10;
    box-sizing: border-box;
    background: #FFFFFF;
}

.goods_msg .title::after {
    content: '';
    display: block;
    width: 100%;
    height: 1px;
    position: absolute;
    background: #DDE2EE;
    top: 50%;
    left: 0;
}

.msg {
    margin-top: 20rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.msg text {
    font-size: 28rpx;
    color: #495E8B;
    margin-bottom: 24rpx;
    display: block;
}

.brand {
    width: 100%;
    background: #FFFFFF;
    box-shadow: 0 2px 7px 0 #D9DFED;
    box-sizing: border-box;
    padding: 40rpx 26rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}

.brand .logo {
    display: block;
    width: 180rpx;
    height: 180rpx;
    flex-shrink: 1;
    margin-right: 20rpx;
}

.brand_info {
    flex-grow: 1;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.brand_info text {
    display: block;
    font-size: 20rpx;
    color: #495E8B;
}

.brand_info .title {
    font-size: 30rpx;
}

.like_btn {
    margin: 30rpx auto;
}

.like_btn>view {
    position: relative;
    width: 96rpx;
    height: 96rpx;
    background-size: 100% 100%;
    box-shadow: 0 2px 7px 0 #A7B0C2;
    border-radius: 50%;
    margin: auto;
}

button {
    opacity: 0;
    position: absolute !important;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    margin: 0 !important
}

.like_btn view {
    background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/like_btn.png');
    box-shadow: 0 2px 7px 0 #DE84AB !important;
}

.like_btn.active view {
    background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/like_btn_active.png');
    box-shadow: 0 2px 7px 0 #A7B0C2 !important;
}


.view_num {
    margin: 20rpx 0
}

.view_num .num_title {
    font-size: 28rpx;
    color: #495E8B;
}

.view_num .tx_box {
    margin: 22rpx 60rpx;
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
}

.view_num image {
    width: 66rpx;
    height: 66rpx;
    border-radius: 50%;
    background: #eeeeee;
    margin: 7rpx;
    flex-shrink: 0
}

.tx_box .img_tips {
    width: 66rpx;
    height: 66rpx;
    border-radius: 50%;
    background: #9e9e9e;
    margin: 7rpx;
    color: #FFFFFF;
    text-align: center;
    line-height: 66rpx;
    font-size: 20rpx
}

.goods_num {
    font-size: 24rpx;
    color: #495E8B;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.goods_num view:last-child::before {
    content: '';
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/like.png');
    background-size: 100% 100%;
    margin-right: 12rpx;
}

.comment {
    background: #FFFFFF;
    padding: 20rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}


.comment .title {
    font-size: 28rpx;
    color: #495E8B;
    margin-bottom: 20rpx
}

.comment .title text:last-child {
    color: #3489FF;
    margin-left: 20rpx
}

.comment_box {
    width: 100%;
    height: 90rpx;
    padding: 24rpx 30rpx;
    font-size: 24rpx;
    border-radius: 3px;
    border: 1px solid #D8E7ED;
    box-sizing: border-box
}

.comment_btn {
    width: 120rpx;
    height: 60rpx;
    border-radius: 3px;
    color: #FFFFFF;
    background: #39CCE1;
    font-size: 26rpx;
    line-height: 60rpx;
    text-align: center;
    margin-top: 10rpx;
    float: right;
    position: relative;
}

.comment_list {
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
}

.comment_item {
    display: flex;
    border-bottom: 1px solid #D8E7ED;
    align-items: flex-start;
    padding-top: 20rpx
}

.comment_item:last-child {
    border: none
}

.comment_item image {
    width: 66rpx;
    height: 66rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
    border-radius: 50%;
    margin-top: 20rpx;

}

.item_right {
    flex-grow: 1;
}

.right_title {
    font-size: 26rpx;
    color: #495E8B;
    margin-bottom: 20rpx;
}

.right_bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20rpx;
    padding-right: 20rpx;
    box-sizing: border-box
}

.right_bottom text:first-child {
    flex-grow: 1;
    font-size: 24rpx;
    color: #495E8B;
}

.right_bottom text:last-child {
    flex-shrink: 0;
    padding-left: 30rpx;
    font-size: 20rpx;
    color: #A7B0C2;
}