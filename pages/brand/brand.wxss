/* pages/brand/brand.wxss */

.brand_box {
    width: 100%;
    height: 100%;
    overflow: hidden;
    overflow-y: auto;
    padding-right: 10rpx;
    -webkit-overflow-scrolling: touch;
    background: #f7f7fa;
}

.brand_box>view {
    margin: 20rpx;
}

.brand {
    width: 100%;
    background: #FFFFFF;
    box-shadow: 0 2px 7px 0 #D9DFED;
    box-sizing: border-box;
    padding: 40rpx 26rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}

.brand .logo {
    display: block;
    width: 180rpx;
    height: 180rpx;
    flex-shrink: 1;
    margin-right: 26rpx;
}

.brand_info {
    flex-grow: 1;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.brand_info text {
    display: block;
    font-size: 20rpx;
    color: #495E8B;
}

.brand_info .title {
    font-size: 30rpx;
    font-weight: bold
}

.brand_msg {
    background: #FFFFFF;
    box-shadow: 0 2px 7px 0 #D9DFED;
    margin-top: 20rpx;
}

.brand_msg .title {
    font-size: 28rpx;
    color: #495E8B;
    font-weight: bold;
    padding: 30rpx;
    box-sizing: border-box
}

.brand_msg .cont {
    font-size: 24rpx;
    color: #495E8B;
    text-indent: 40rpx;
    padding: 0 30rpx;
    padding-bottom: 20rpx;
    box-sizing: border-box
}

.moer {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #4897AF;
    text-align: center;
    font-size: 28rpx;
    box-shadow: 0 0 4px 0 #D9DFED;
}

.goods {
    width: 100%;
    margin-top: 20rpx;
    background: #FFFFFF;
    box-shadow: 0 0 4px 0 #D9DFED;
    margin-bottom: 120rpx;
}

.goods .title {
    font-size: 28rpx;
    color: #495E8B;
    font-weight: bold;
    padding: 30rpx;
    box-sizing: border-box;
    padding-bottom: 20rpx;
}

.goods_list {
    display: flex;
    padding: 0 30rpx;
    box-sizing: border-box;
    flex-wrap: wrap;
}

.goods_item {
    width: 310rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
}

.goods_item:nth-child(2n) {
    margin: 0
}

.goods_item image {
    height: 200rpx;
    width: 100%;
    margin-bottom: 10rpx;
    box-shadow: 0 0 4px 0 #D9DFED;
    display: block
}

.goods_item .title {
    font-size: 24rpx;
    color: #495E8B;
    margin-bottom: 10rpx;
    font-weight: bold;
    padding: 0
}

.goods_item .money {
    font-size: 24rpx;
    color: #495E8B;
}

.goods_item .num {
    display: flex;
    align-items: center;
    font-size: 20rpx;
    color: #495E8B;
}

.goods_item .num>view {
    width: 140rpx;
    margin-right: 30rpx
}

.goods_item .view::before {
    width: 20rpx;
    height: 16rpx;
    display: inline-block;
    content: '';
    background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/view.png');
    margin-right: 10rpx;
    background-size: 100% 100%
}

.goods_item .like::before {
    width: 20rpx;
    height: 20rpx;
    display: inline-block;
    content: '';
    background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/like.png');
    margin-right: 10rpx;
    background-size: 100% 100%
}

.fixed {
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    font-size: 36rpx;
    color: #39CCE1;
    text-align: center;
    left: 0;
    bottom: 0;
    background: #FFFFFF;
    box-shadow: 0 -1px 1px 0 rgba(0,0,0,0.07);
    height: 100rpx;
}
.fixed>view{
    position: relative;
    width: 50%;
}

.fixed .call::before{
    content: '';
    display: inline-block;
    background-image: url('https://www.mati.hk/Public/MiniProgram-note/index/call_v.png');
    background-size: 100%;
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    vertical-align: middle
}
.fixed button{
    width: 100%;
    height: 100%;
    opacity: 0;
    position: absolute;
    left: 0;
    top: 0
}