/* pages/help/help.wxss */
.help{
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.nav {
    width: 100%;
    height: 96rpx;
    background: #ffffff;
    display: flex;
    justify-content: space-around;
    box-shadow: 0 2px 4px 0 #D9DFED;
    margin-bottom: 30rpx
}

.nav_item {
    padding: 0 40rpx;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    position: relative;
    font-size: 32rpx;
    color: #A7B0C2;
}

.nav_item.active {
    color: #39CCE1;
}

.nav_item.active::after {
    background: #39CCE1;
    content: '';
    display: block;
    width: 100%;
    height: 6rpx;
    border-radius: 5rpx;
    bottom: 0;
    left: 0;
    position: absolute
}

.help_cont{
    width: 100%;
    position: absolute;
    top: 96rpx;
    bottom: 0;
}
.help_cont image{
    width: 100%;
    display: block;
}